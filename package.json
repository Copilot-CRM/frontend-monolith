{
  "name": "copilot-crm",
  "version": "1.4.2",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze": "turbo analyze",
    "build": "turbo build",
    "bundlewatch": "turbo bundlewatch",
    "dev": "turbo dev",
    "dev:crm": "turbo dev --filter=@repo/copilot-crm -- --port 3001",
    "dev:portal": "turbo dev --filter=@repo/client-portal -- --port 3000",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "test": "vitest",
    "ui": "pnpm --filter @repo/ui ui",
    "storybook": "pnpm --filter @repo/ui storybook",
    "chromatic": "pnpm --filter @repo/ui chromatic"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.14",
    "@repo/eslint-config": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/eslint": "^8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.2",
    "bundlewatch": "^0.4.0",
    "eslint": "^8",
    "jsdom": "^25.0.1",
    "prettier": "^3.3.3",
    "turbo": "2.1.1",
    "typescript": "^5",
    "vitest": "^2.1.1"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
